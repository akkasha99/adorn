<div class="content" style="width:600px;">
  <% resource_name = :user %>
  <%= form_for(User.new, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <form class="login-form" action="" method="post">
        <h3 class="form-title">Login to Adoorn</h3>
        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
        </div>
        <div class="form-group">
          <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
          <label class="control-label visible-ie8 visible-ie9">Username</label>

          <div class="input-icon">
            <i class="fa fa-user"></i>
            <!--<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username"/>-->
            <%= f.text_field :user_name, :autofocus => true, :class => "form-control placeholder-no-fix", :placeholder => "Username" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>

          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <!--<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password"/>-->
            <%= f.password_field :password, :autocomplete => "off", :class => "form-control placeholder-no-fix", :placeholder => "Password", :id => "password" %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign in", :class => "btn green pull-right" %>
          </br>
          <%#= render "devise/shared/links" %>
        </div>
      </form>
  <% end %>
</div>

<style>
    body {
        color: #000000
    }
</style>
<script>
    $("#password").keyup(function (e) {
        var code = (e.keyCode ? e.keyCode : e.which)
        if (code == 13) {
            $("form").submit();
        }
    });
</script>
