<script>

    function add_new_item() {
        if ($("#basic_category").val() != "") {
            var category_id = $("#basic_category").val();
            $.ajax({
                url: '/admin/basic_items/new_item?id=' + category_id,
                processData: false,
                success: function (data) {
                    $("#item_panel").html(data);
                }
            });
        } else {
            apprise("No Category Selected.")
            return false;
        }
    }


</script>