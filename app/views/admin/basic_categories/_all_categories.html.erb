<div class="page-content" style="min-height:1215px">

  <div class="row">
    <div class="col-md-12">
      <h3 class="page-title">
        Basic Categories
      </h3>
      <ul class="page-breadcrumb breadcrumb">
        <li>
          <i class="fa fa-home"></i>
          <a href="/">Home</a>
          <i class="fa fa-angle-right"></i>
        </li>
        <li>
          <a href="/">Basic Categories</a>
          <i class="fa fa-angle-right"></i>
        </li>
        <li>
          <a href="/">All Basic Categories</a>
        </li>
        <li class="pull-right">
          <div data-original-title="Change dashboard date range" data-placement="top" class="dashboard-date-range tooltips" id="dashboard-report-range">
            <i class="icon-calendar"></i>
            <span></span>
            <i class="fa fa-angle-down"></i>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="portlet box grey-cascade">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-globe"></i> Basic Categories
          </div>
          <div class="tools">
            <a class="collapse" href="javascript:;">
            </a>
            <a class="config" data-toggle="modal" href="#portlet-config">
            </a>
            <a class="reload" href="javascript:;">
            </a>
            <a class="remove" href="javascript:;">
            </a>
          </div>
        </div>
        <div class="portlet-body">
          <div class="table-toolbar">
            <div class="btn-group">
              <%#= link_to "Create User", :class => "btn green" %>
              <a href="javascript:;" onclick="partial_call('basic_categories/new');" class="btn green">Add New</a>
            </div>

          </div>
          <% if categories.size > 0 %>
              <div id="blogs_table_wrapper" class="dataTables_wrapper no-footer">
                <table id="catogries_table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_1_info">
                  <thead>
                  <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" style="width: 100px;" aria-sort="ascending" aria-label="Username: activate to sort column ascending">
                      Category Title
                    </th>
                    <th class="sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" style="width: 150px;" aria-sort="ascending" aria-label="Username: activate to sort column ascending">
                      Category Image
                    </th>
                    <th class="sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" style="width: 100px;" aria-sort="ascending" aria-label="Username: activate to sort column ascending">
                      Action
                    </th>
                  </tr>
                  </thead>
                  <tbody>
                  <% categories.each do |category| %>
                      <tr class="">
                        <td>
                          <p style="font-weight: bold; word-wrap: break-word;"> <%= category.name %> </p>
                        </td>
                        <td>
                          <%= image_tag category.image.url(:medium), :style => "width: 100x%; height: 175px;" %>
                          <!--<a href="<%#= blog.web_link %>"><%#= blog.web_link %></a>-->
                        </td>
                        <td id="div_<%#= blog.id %>">
                          <%= link_to "edit", 'javascript:;', :class => 'btn blue', :onclick => "edit_category('#{category.id}');" %>
                          <%= link_to "Delete", 'javascript:;', :class => 'btn red', :onclick => "del_category('#{category.id}');" %>
                          <%#= render :partial => 'blog_block_button', :locals => {:blog => blog} %>
                        </td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
          <% else %>
              <h3>No category found</h3>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>

    function edit_category(id) {
        $.ajax({
            url: '/admin/basic_categories/edit?id=' + id,
            processData: false,
            success: function (data) {
                $("#panel_body").html(data);
            }
        });
    }

    function del_category(id) {
        apprise("Are you sure You want to Delete this Category ", {'verify': true}, function (r) {
            if (r == true) {
                $.ajax({
                    url: '/admin/basic_categories/delete?id=' + id,
                    processData: false,
                    success: function (data) {
                        $("#panel_body").html(data);
                    }
                });
            }
        });
    }

    var table = $('#catogries_table');
    table.dataTable({
        "columns": [
            {
                "orderable": true
            },
            {
                "orderable": true
            },
            {
                "orderable": false
            }
        ],
        "lengthMenu": [
            [5, 10, 15, 20, -1],
            [5, 10, 15, 20, "All"] // change per page values here
        ],
        // set the initial value
        "pageLength": 10,
        "pagingType": "bootstrap_full_number",
        "language": {
            "lengthMenu": "_MENU_ records",
            "paginate": {
                "previous": "Prev",
                "next": "Next",
                "last": "Last",
                "first": "First"
            }
        },
        "columnDefs": [
            {  // set default column settings
                'orderable': true,
                'targets': [1]
            },
            {
                "searchable": true,
                "targets": [1]
            }
        ],
        "order": [
            [1, "asc"]
        ] // set first column as a default sort by asc
    });

</script>