<header class="basic-tees-h-s-new">
  <div class="h-con">
    <div class="user-main-con">
      <div class="h-heading2">Add Basics</div>
    </div>
    <div class="backBtn">
      <a href="javascript:;" onclick="return_outfit();"><img src="/assets/setting-errow.png" alt=""></a></div>
    <div class="clear-fix"></div>
  </div>
</header>

<div class="w_100 padbot100 tess-main-con-new">
  <% categories.each do |basic| %>
      <a href="javascript:;" onclick="get_subcategories('<%= basic.id %>')">
        <div class="add-basic-con p0">
          <img src="<%= basic.image.url(:medium) %>" alt="">

          <div class="pro-name"><%= basic.name %></div>
        </div>
      </a>
  <% end %>
</div>

<script>
    $(document).ready(function () {
        hide_footers();
        window.scrollTo(0, 0);
//        $('#upload_sub').removeClass('set_pg_bg')
//        $('#closet_sub').removeClass('set_pg_bg')
        $("#wrapper").removeClass('create-outfitbg');
    });

    function get_subcategories(id) {
        $('.background_shadow').show();
        $.ajax({
            url: '/user/user_outfits/select_basic_items?id=' + id,
            processData: false,
            success: function (data) {
                if (data != 'error') {
                    $('#basics_add').hide()
                    $('#basics_add_subcategories').show().html(data);
                    $('.background_shadow').hide();
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error(errorThrown);
                $('.background_shadow').hide();
            }
        });
    }
</script>
