<header>
  <div class="h-con">
    <div class="user-main-con">
      <div class="h-heading2">Adoorners</div>
    </div>
    <div class="backBtn"><a onclick="return_closet()"><img src="/assets/setting-errow.png" alt=""></a>
    </div>
    <div class="clear-fix"></div>
  </div>
</header>

<div class="w-100 mrgbot100">
  <% if @adoorners.size > 0 %>
      <% @adoorners.each do |adoorner| %>
          <a href="#">
            <div class="comments-h-con btnOut">
              <div class="w_100 mnIn">
                <div class="user-image2">
                  <a href="javascript:;" onclick="view_partial('icon_closet','/user/users/user_closet?id=<%= adoorner.id %>')">
                    <% if adoorner.avatar? && File.exists?(adoorner.avatar.path(:thumb).to_s) %>
                        <%= image_tag adoorner.avatar(:thumb) %>
                    <% else %>
                        <%= image_tag "missing.png" %>
                    <% end %>
                  </a>
                </div>

                <div class="txtbx02">
                  <a href="javascript:;" onclick="view_partial('icon_closet','/user/users/user_closet?id=<%= adoorner.id %>')">
                    <h6><%= adoorner.user_name %></h6>
                  </a>

                  <p><%= (adoorner.first_name.present? && adoorner.last_name.present?) ? adoorner.first_name + ' ' + adoorner.last_name : '' %></p>
                </div>
              </div>
            </div>
          </a>
      <% end %>
  <% else %>
      <a href="#">
        <div class="comments-h-con btnOut">
          <div class="w_100 mnIn">
            <div class="user-image2"><%= image_tag "missing.png" %></div>
            <div class="txtbx02">
              <h6>Nothing Found.</h6>

            </div>
          </div>
        </div>
      </a>
  <% end %>
</div>