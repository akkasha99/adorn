<% if items.size > 0 %>
    <% items.each do |item| %>

        <div class="search-prod-con9">
          <div class="prce w_100"><%= truncate(item.title, :length => 10) %></div>
          <div class="pro-con" onclick="item_show('<%= item.id %>')">
            <% if item.image? && File.exists?(item.image.path(:thumb).to_s) %>
                <%= image_tag item.image(:thumb) %>
            <% else %>
                <%= image_tag "missing_item.jpeg", :width => "150px", :height => "150px" %>
            <% end %>
            <!--<img src="/assets/black-shirt.jpg" alt="">-->
          </div>
          <div class="prce">$<%= item.price %></div>
          <div class="quantity"><%= number_to_human(item.item_adoorners.count) %></div>
        </div>
    <% end %>
<% else %>
    <div class="w100">
      <a href="#">
        <div class="inner-h-con p0">
          <div class="pro desk-not-found">Nothing Found.</div>
        </div>
      </a>
    </div>
<% end %>