<div id="openModal" class="modalDialog">
  <div class="login-popup">
    <div class="popp-hd-login">Login <a href="#" id="closeme" title="Close" class="close">X</a></div>
    <div class="login-box">
      <% resource = User.new %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'signin_form'}) do |f| %>
          <%= f.text_field :user_name, :placeholder => "Username" %>
          <%= f.password_field :password, :placeholder => "Password", :id => "password" %>
          <a href="javascript:;" onclick="submit_form();">
            <div class="desk-login-box-btn">SUBMIT</div>
          </a>

      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //    $(function () {
        <% if flash[:error] != nil %>
        document.getElementById("mainpop_text").innerHTML = "<%= flash[:error] %>";
        $("#mainapp_popup").show();
        setTimeout(function () {
            close_me_please();
        }, 4000);
        <% elsif flash[:alert] != nil %>
        document.getElementById("mainpop_text").innerHTML = "<%= flash[:alert] %>";
        $("#mainapp_popup").show();
        setTimeout(function () {
            close_me_please();
        }, 4000);
        <% end %>
        //    });
    })

    function swapStyleSheet(sheet) {
        document.getElementById('pagestyle').setAttribute('href', sheet);
    }

    function submit_form() {
        $("#signin_form").submit();
    }

    $("#password").keyup(function (e) {
        var code = (e.keyCode ? e.keyCode : e.which)
        if (code == 13) {
            submit_form();
        }
    });
    $("#openModal").hide();
    $(".popp-hd-login a").click(function () {
        $("#openModal").hide();
    })
    $(".login-btn-bdr").click(function () {
        $("#openModal").show();
    })


</script>
